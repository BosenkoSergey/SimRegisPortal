<MudGrid Justify="Justify.FlexStart" Class="mb-3">
    <MudItem Style="width: 220px;">
        <MudDatePicker Label="З дати" @bind-Date="QueryParams.DateFrom" Editable Clearable Variant="Variant.Outlined" />
    </MudItem>

    <MudItem Style="width: 220px;">
        <MudDatePicker Label="По дату" @bind-Date="QueryParams.DateTo" Editable Clearable Variant="Variant.Outlined" />
    </MudItem>

    <MudItem Style="width: 250px;">
        <MudSelect Label="З валюти" @bind-Value="QueryParams.FromCurrencyId" Clearable Variant="Variant.Outlined">
            @foreach (var currency in CurrencyCodes)
            {
                <MudSelectItem Value="@((int?)currency.Key)"> @currency.Value </MudSelectItem>
            }
        </MudSelect>
    </MudItem>

    <MudItem Style="width: 250px;">
        <MudSelect Label="До валюти" @bind-Value="QueryParams.ToCurrencyId" Clearable Variant="Variant.Outlined">
            @foreach (var currency in CurrencyCodes)
            {
                <MudSelectItem Value="@((int?)currency.Key)"> @currency.Value </MudSelectItem>
            }
        </MudSelect>
    </MudItem>

    <MudItem Style="width: 150px;" Class="d-flex align-center">
        <MudButton OnClick="@(() => Search.InvokeAsync(null))"
                   Variant="Variant.Filled" Color="Color.Primary"
                   Style="height: 56px; width: 100%;">
            Пошук
        </MudButton>
    </MudItem>
</MudGrid>

@code {
    [Parameter] public ExchangeRateQueryParams QueryParams { get; set; } = default!;
    [Parameter] public Dictionary<int, string> CurrencyCodes { get; set; } = default!;
    [Parameter] public EventCallback Search { get; set; }
}
